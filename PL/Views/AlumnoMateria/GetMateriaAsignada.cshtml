<div class="form-group">
    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-success glyphicon glyphicon-plus " href="@Url.Action("GetMateriaSinAsignar", "AlumnoMateria", Model.Alumno)"></a>
        </div>
    </div>
</div>
<div class="row" style="padding-top:30px">
    <div class="col-md-12">
        <table class="table table-bordered">
            <tr>
                <th class="text-center">
                    Selecciona
                </th>
                <th class="text-center hidden" scope="col">
                    IdAlumnoMateria
                </th>
                <th class="text-center hidden" scope="col">
                    IdMateria
                </th>
                <th class="text-center" scope="col">
                    Nombre
                </th>
            </tr>
            @foreach (ML.AlumnoMateria alumnomateria in Model.AlumnosMaterias)
            {
                <tr>
                    <td class="text-center hidden">
                        @alumnomateria.IdAlumnoMateria
                    </td>
                    <td class="text-center hidden">
                        @alumnomateria.IdAlumnoMateria
                    </td>
                    <td class="text-center">
                        <input type="checkbox" value="@alumnomateria.Materia.IdMateria" name="AlumnosMaterias">
                    </td>
                    <td class="text-left">
                        @alumnomateria.Materia.Nombre
                    </td>
                </tr>

            }

        </table>
        <div class="form-group col-md-12">
            <div class="text-right">

                <input class="btn btn-success" id="Eliminar" type="submit" value="Actualizar" />SS
                <a class="btn btn-danger" href="@Url.Action("GetMateriaAsignada", "AlumnoMateria", new { IdAlumno = Model.Alumno.IdAlumno })"> Regresar</a>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).on('click', '#AlumnosMaterias', function () {
        $(".emp_checkbox").prop("checked", this.checked);
        $("#select_count").html($("input.emp_checkbox:checked").length + " Selected");
    });
    $(document).on('click', '.emp_checkbox', function () {
        if ($('.emp_checkbox:checked').length == $('.emp_checkbox').length) {
            $('#AlumnosMaterias').prop('checked', true);
        } else {
            $('#AlumnosMaterias').prop('checked', false);
        }
        $("#select_count").html($("input.emp_checkbox:checked").length + " Selected");
    });
</script>