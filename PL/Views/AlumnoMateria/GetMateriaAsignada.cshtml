@model ML.AlumnoMateria
@{
    ViewBag.Title = "GetMateriaAsignada";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">

        <h2>Materias Asiganadas a:  @Model.Alumno.Nombre  @Model.Alumno.ApellidoPaterno @Model.Alumno.ApellidoMaterno </h2 >
</div>
</div>

<br />
<div class="form-group">
    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-success glyphicon glyphicon-plus " href="@Url.Action("GetMateriaSinAsignar", "AlumnoMateria", Model.Alumno)"></a>
        </div>
    </div>
</div>
<div class="row" style="padding-top:30px">
    <div class="col-md-12">
        <table class="table table-bordered">
            <tr>
                <th class="text-center">
                    Selecciona
                </th>
                <th class="text-center hidden" scope="col">
                    IdAlumnoMateria
                </th>
                <th class="text-center hidden" scope="col">
                    IdMateria
                </th>
                <th class="text-center" scope="col">
                    Nombre
                </th>
            </tr>
            @foreach (ML.AlumnoMateria alumnomateria in Model.AlumnosMaterias)
            {
                <tr>
                    <td class="text-center hidden">
                        @alumnomateria.IdAlumnoMateria
                    </td>
                    <td class="text-center hidden">
                        @alumnomateria.IdAlumnoMateria
                    </td>
                    <td class="text-center">
                        <input type="checkbox" value="@alumnomateria.Materia.IdMateria" name="AlumnosMaterias">
                    </td>

                    <td class="text-left">
                        @alumnomateria.Materia.Nombre
                    </td>
                </tr>

            }
           

        </table>
        <div class="form-group col-md-12">
            <div class="text-right">
        
                <input class="btn btn-success" type="submit" value="Actualizar" />
                <a class="btn btn-danger" href="@Url.Action("GetMateriaAsignada", "AlumnoMateria", new { IdAlumno = Model.Alumno.IdAlumno })"> Regresar</a>
            </div>
        </div>
    </div>
</div>


